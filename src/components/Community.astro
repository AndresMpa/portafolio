        {
          communitiesData.map((data) => (
            <Reference
              icon={data.icon}
              link={data.link}
              alt={data.alt}
              useSvg={false}
              width={65}
            />
          ))
        }
      </div>
    </article>
  </div>

  <article class="overflow-x-auto mx-auto">
    <TableIterator headers={headers} entries={entries} />
  </article>
</section>
